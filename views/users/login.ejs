<% layout('layouts/boilerplate') %>

   <form action="/login" method="post" class="validated-form" novalidate>
      <div class="col-6 mx-auto">
         <h1 class="text-center">Login</h1>

         <div class="mb-3 position-relative">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" autocomplete="username" required />
            <div class="invalid-tooltip end-0 text-danger bg-transparent">
               Please enter a username!
            </div>
         </div>
         <div class="mb-3 position-relative">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" autocomplete="current-password"
               required />
            <div class="invalid-tooltip end-0 text-danger bg-transparent">
               Please enter a password!
            </div>
         </div>

         <button class="btn btn-primary">Login</button>
      </div>
   </form>